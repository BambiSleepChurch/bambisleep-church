{
  "name": "bambisleep-mcp-server",
  "version": "1.0.0",
  "description": "BambiSleep Church MCP Control Tower - Model Context Protocol server for intimate AI assistant with safety-first architecture",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:safety": "vitest run src/middleware/__tests__/safety.test.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean:dist": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\"",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run test"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai-assistant",
    "safety",
    "bambisleep"
  ],
  "author": "BambiSleepChat",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^12.4.1",
    "dotenv": "^16.4.0",
    "express": "^4.18.2",
    "openai": "^4.28.0",
    "uuid": "^13.0.0",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
