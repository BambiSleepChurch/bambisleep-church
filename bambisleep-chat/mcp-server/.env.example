# Environment Configuration
NODE_ENV=development

# MCP Server
MCP_PORT=3000
MCP_HOST=localhost

# Unity Avatar Bridge
UNITY_WS_PORT=3001

# LLM API Keys
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here

# Model Selection
# Options: claude-3-5-sonnet-20241022, gpt-4o-mini, gpt-4o
PRIMARY_MODEL=claude-3-5-sonnet-20241022
FALLBACK_MODEL=gpt-4o-mini

# Safety Configuration
SAFETY_LEVEL=strict
# Options: strict, moderate, permissive (always use strict in production)

# Logging
LOG_LEVEL=info
# Options: debug, info, warn, error

# Rate Limiting
MAX_MESSAGES_PER_MINUTE=20
MAX_CONVERSATION_LENGTH=50

# Session Management
SESSION_TIMEOUT_MS=1800000
# 30 minutes = 1800000ms

# Database (if using persistence)
# DATABASE_URL=postgresql://user:pass@localhost:5432/bambisleep

# Monitoring (optional)
# SENTRY_DSN=your_sentry_dsn_here
