{
  "name": "harleyvader-docs",
  "version": "1.0.0",
  "description": "Universal Machine Philosophy Documentation Hub - Express + React Markdown Renderer",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server.js",
    "client:dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node server.js",
    "lint": "eslint src/**/*.{js,jsx}",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css,md}\""
  },
  "keywords": [
    "documentation",
    "markdown",
    "react",
    "express",
    "universal-machine",
    "bambisleep"
  ],
  "author": "HarleyVader",
  "license": "MIT",
  "dependencies": {
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "vite": "^5.4.2",
    "nodemon": "^3.1.4",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1",
    "react-markdown": "^9.0.1",
    "remark-gfm": "^4.0.0",
    "remark-breaks": "^4.0.0",
    "rehype-highlight": "^7.0.0",
    "rehype-slug": "^6.0.0",
    "rehype-autolink-headings": "^7.1.0",
    "gray-matter": "^4.0.3"
  },
  "nodemonConfig": {
    "watch": ["server.js", "routes/**"],
    "ext": "js",
    "ignore": ["node_modules", "dist", "public"],
    "delay": 500
  }
}
